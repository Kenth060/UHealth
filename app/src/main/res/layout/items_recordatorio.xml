<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/CVPastilla"
        android:layout_width="370dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/borde"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/btnNotLottie"
            android:layout_marginTop="65dp"
            android:background="@drawable/borde"
            android:backgroundTint="#BBDEFB"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="305dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/notification" />


        <TextView
            android:id="@+id/txtNombrePastilla"
            android:layout_width="290dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Ibuprofeno 400 mg Capsulas"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtCantidadPills"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/background_dialog"
            android:text="30 capsula(s) restantes"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="@color/Gray"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtFrecuenciaPills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:text="1 una vez al dia - 8:00am"
            android:textColor="@color/Gray"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/btnEditarRecordatorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/borde"
            android:backgroundTint="#E0F7FA"
            android:src="@drawable/ic_editar" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>